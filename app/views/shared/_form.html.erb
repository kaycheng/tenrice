<div class="container">
  <div class="row">
    <div class="col-12 col-md-8 offset-2">
      <%= form_for @restaurant do |f| %>
        
        <div class="form-group">
          <%= f.label :article, "餐廳名稱" %>
          <%= f.text_field :article, placeholder: "請輸入主題", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :open_hours, "餐廳營業時間" %>
          <%= f.text_field :open_hours, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :description, "餐廳描述" %>
          <%= f.text_area :description, :rows => 10, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :photo, "餐廳照片" %>
          <%= image_tag(@restaurant.photo, width: "300px") if @restaurant.photo.attached? %>
          <%= f.file_field :photo %>
        </div>
        
      
        <%= f.submit class: "btn btn-info" %>

      <% end %>
    </div>
  </div>
</div>
